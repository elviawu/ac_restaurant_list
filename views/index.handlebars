<!-- import scripts -->
<script src="../events.js"></script>
<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keywords" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keywords}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- restaurant list -->
<div class="container mt-5">
  <form action="/" method="GET">
    <div class="row col-4 mb-2">
      <div class="input-group">
        <!-- sort -->
        <select name="sort" id="sort" class="form-control form-select" onchange="submit()" value="{{sort}}">
          <option value="name-asc">店家名稱 ( A > Z )</option>
          <option value="name-desc">店家名稱 ( Z > A )</option>
          <option value="rating">評分 ( 高 > 低 )</option>
          <option value="category">類別</option>
          <option value="location">地區</option>
        </select>
      </div>
    </div>
  </form>
  <div class="row">
    {{#each restaurants}}
    <div class="col-12 col-sm-6 col-md-4">
      <a href="/restaurants/{{this._id}}" class="text-secondary">
        <div class="card mb-3">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{this.name}}</h6>

            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i> {{this.category}}
            </div>

            <span class="badge badge-pill badge-danger font-weight-normal">
              {{this.rating}}
              <i class="fas fa-star fa-xs"></i>
            </span>

          </div>
          <div class="card-footer d-flex justify-content-end flex-wrap">
            <a class="btn btn-function btn-sm mr-1" href="./restaurants/{{ this._id }}">瀏覽</a>
            <a class="btn btn-function btn-sm mr-1" href="./restaurants/{{ this._id }}/edit">修改</a>
            <form action="./restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
              <button class="btn btn-function btn-sm mr-1" type="submit">刪除</button>
            </form>
          </div>
        </div>
      </a>
    </div>
    {{/each}}
  </div>
</div>